<PreMenuPage2>:
    CustBoxLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'app_data/images/buttons/background1.png'

        BoxLayout:
            id: container
            orientation: 'vertical'
            spacing: 20
            BoxLayout:
                Button:
                    size_hint_x: .1
                    background_normal: 'app_data/images/buttons/arrow-left.png'
                    on_press: root.goBack()
                Label:
                    text: ''
                Button:
                    size_hint_x: .1
                    background_normal: 'app_data/images/buttons/arrow-right.png'
                    on_press: root.goBack()

            Button:
                text: 'Start a new Game'
                on_press: root.goToMenu()
            Button:
                text: 'Resume my course'
                on_press: pass
<MenuPage>:
    CustBoxLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'app_data/images/buttons/background1.png'

        BoxLayout:
            id: container
            orientation: 'vertical'
            spacing: 30
            BoxLayout:
                Button:
                    size_hint_x: .1
                    background_normal: 'app_data/images/buttons/arrow-left.png'
                    on_press: root.goBack()
                Label:
                    text: ''
                Button:
                    size_hint_x: .1
                    background_normal: 'app_data/images/buttons/arrow-right.png'
                    on_press: root.goBack()

            Label:
                text: 'The Main Menu'
            Button:
                text: 'Play My Daily Challenge'
                on_press: root.goToMenuContent('daily')
            Button:
                text: 'Pursue a Course Challenge'
                on_press: root.goToMenuContent('course')
            Button:
                text: 'Play My Bonuses'
                on_press: root.goToMenuContent('bonuses')

