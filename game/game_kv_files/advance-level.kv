<AdvanceLevel>:
    CustBoxLayout:
        BoxLayout:
            border: 120
            id: container
            sweep_threshold: .4
            Carousel:
                id: carousel
                ignore_perpendicular_swipes: True
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    padding: [5,5,5,5]
                    BoxLayout:
                        size_hint_y: .2
                        Label:
                            text: ''
                        Button:
                            size_hint_x: .1
                            background_normal: 'app_data/images/buttons/arrow-right.png'
                            on_press: carousel.load_next(mode='next')

                    Label:
                        halign: 'center'
                        font_size: 20
                        text: 'Welcome To The Advance Level\nThis is the start of your quest, and your progress to the \n next level will only be determined\nby the performance in the challenge just completed\nwith the exception of the first challenge.\nGood luck!\nSo Lets get started, shall we?'
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    BoxLayout:
                        size_hint_y: .2
                        Button:
                            size_hint_x: .1
                            background_normal: 'app_data/images/buttons/arrow-left.png'
                            on_press: carousel.load_previous()
                        Label:
                            text: ''
                        Button:
                            size_hint_x: .1
                            background_normal: 'app_data/images/buttons/arrow-right.png'
                            on_press: carousel.load_next(mode='next')
                    Label:
                        text: 'Ven Diagram Regions'

                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    BoxLayout:
                        size_hint_y: .2
                        Button:
                            size_hint_x: .1
                            background_normal: 'app_data/images/buttons/arrow-left.png'
                            on_press: carousel.load_previous()
                        Label:
                            text: ''
                    Label:
                        text: 'Ven Diagram Problems'
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    BoxLayout:
                        size_hint_y: .2
                        Button:
                            size_hint_x: .1
                            background_normal: 'app_data/images/buttons/arrow-left.png'
                            on_press: carousel.load_previous()
                        Label:
                            text: ''
                    Label:
                        text: 'Welcome To The End\nYou Have Successfully Completed All Levels,\nYou May Consider Restarting.\nThanks'