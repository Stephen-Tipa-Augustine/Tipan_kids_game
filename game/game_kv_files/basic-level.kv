#: import Animation kivy.animation.Animation
#: include game/game_kv_files/step1.kv
#: include game/game_kv_files/step2.kv
#: include game/game_kv_files/step3.kv
#: include game/game_kv_files/step1-content.kv

<BasicLevel>:
    CustBoxLayout:
        BoxLayout:
            border: 120
            id: container
            sweep_threshold: .4
            Carousel:
                id: carousel
                ignore_perpendicular_swipes: True
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    padding: [5,5,5,5]
                    BoxLayout:
                        size_hint_y: .2
                        Label:
                            text: ''
                        Button:
                            size_hint_x: .1
                            background_normal: 'app_data/images/buttons/arrow-right.png'
                            on_press: carousel.load_next(mode='next')

                    Label:
                        halign: 'center'
                        font_size: 20
                        text: 'Welcome To The Basic or Beginner Level\nThis is the start of your quest, and your progress to the \n next level will only be determined\nby the performance in the challenge just completed\nwith the exception of the first challenge.\nGood luck!\nSo Lets get started, shall we?'

                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    BoxLayout:
                        size_hint_y: .2
                        Button:
                            size_hint_x: .1
                            background_normal: 'app_data/images/buttons/arrow-left.png'
                            on_press: carousel.load_previous()
                        Label:
                            text: ''
                        Button:
                            size_hint_x: .1
                            background_normal: 'app_data/images/buttons/arrow-right.png'
                            on_press: carousel.load_next(mode='next')
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 5
                        padding: 5
                        Label:
                            text: 'Sub - Level 1: Identify and sort'
                            font_size: 30
                            halign: 'center'
                            size_hint_y: .2
                        Label:
                            font_size: 22
                            halign: 'center'
                            text: "HINT!\nIdentify the same shapes and sort.\nClick the reorganise button to have the shapes mixed up randomly\nClick on the shape you like and drag it to the space on the right\nIf the answer is right the \"Correct\" indicator will light Green\nOtherwise the 'Wrong' indicator will light Red\n'See correct answer' gives you the expected outcome\nThe 'Try again' button gives you another chance for retribution\nSo click on the top right arrow to get the ball rolling"
                        Button:
                            text: 'Explore'
                            on_press: root.explore(kind=1)
                            size_hint_y: .15

                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    BoxLayout:
                        size_hint_y: .2
                        Button:
                            size_hint_x: .1
                            background_normal: 'app_data/images/buttons/arrow-left.png'
                            on_press: carousel.load_previous()
                        Label:
                            text: ''
                        Button:
                            size_hint_x: .1
                            background_normal: 'app_data/images/buttons/arrow-right.png'
                            on_press: carousel.load_next(mode='next')
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 5
                        padding: 5
                        Label:
                            text: 'Sub - Level 2: Order and Match'
                            font_size: 30
                            halign: 'center'
                            size_hint_y: .2
                        Label:
                            font_size: 22
                            halign: 'center'
                            text: "HINT!\nIdentify the same shapes and sort.\nClick the reorganise button to have the shapes mixed up randomly\nClick on the shape you like and drag it to the space on the right\nIf the answer is right the \"Correct\" indicator will light Green\nOtherwise the 'Wrong' indicator will light Red\n'See correct answer' gives you the expected outcome\nThe 'Try again' button gives you another chance for retribution\nSo click on the top right arrow to get the ball rolling"
                        Button:
                            text: 'Explore'
                            on_press: root.explore(kind=2)
                            size_hint_y: .15
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    BoxLayout:
                        size_hint_y: .2
                        Button:
                            size_hint_x: .1
                            background_normal: 'app_data/images/buttons/arrow-left.png'
                            on_press: carousel.load_previous()
                        Label:
                            text: ''
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 5
                        padding: 5
                        Label:
                            text: 'Sub - Level 3: Making Smaller sets'
                            font_size: 30
                            halign: 'center'
                            size_hint_y: .2
                        Label:
                            font_size: 22
                            halign: 'center'
                            text: "HINT!\nIdentify the same shapes and sort.\nClick the reorganise button to have the shapes mixed up randomly\nClick on the shape you like and drag it to the space on the right\nIf the answer is right the \"Correct\" indicator will light Green\nOtherwise the 'Wrong' indicator will light Red\n'See correct answer' gives you the expected outcome\nThe 'Try again' button gives you another chance for retribution\nSo click on the top right arrow to get the ball rolling"
                        Button:
                            text: 'Explore'
                            on_press: root.explore(kind=3)
                            size_hint_y: .15